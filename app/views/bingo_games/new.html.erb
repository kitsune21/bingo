<section class="min-h-screen flex justify-center bg-gray-100 py-4 px-4">
  <div class="max-w-md w-full bg-white p-8 rounded-lg shadow-md">
  <h1 class="text-2xl font-bold mb-6 text-gray-800 text-center">New Bingo Game</h1>
  <%= form_with model: @bingo_game, local: true, data: { turbo: false } do |form| %>
    <div class="pb-2">
      <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-1"%>
      <%= form.text_field :name, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    </div>
    <div>
      <%= form.submit "Create Bingo Game", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 font-semibold"%>
    </div>
  <% end %>
  <div class="mt-6 text-center">
    <%= link_to "Back", root_path, class: "text-blue-600 hover:text-blue-800 text-sm font-medium" %>
  </div>
  </div>
</section>