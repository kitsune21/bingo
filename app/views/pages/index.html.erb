<div class="max-w-lg mx-auto pt-8 p-6 bg-white rounded shadow">
  <p class="text-lg mb-4">Welcome to Bingo!</p>
  <div>
    <h1>Bingo Games</h1>
    <div class="flex flex-col">
      <% if @bingo_games.any? %>
        <% @bingo_games.each do |game| %>
          <%= link_to game.name,
            generate_squares_bingo_game_path(game.id),
            class: "text-blue-600 underline"
          %>
        <% end %>
      <% else %>
        <p>You don't currently have any bingo games</p>
      <% end %>
      <div>
        <%= link_to "Start a new Bingo Board", new_bingo_game_path, class: "text-blue-600 underline" %>
      </div>
    </div>
  </div>
</div>